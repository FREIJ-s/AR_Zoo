{% extends 'base.html.twig' %}

{% block title %}Accueil - Arcadia Zoo{% endblock %}

{% block body %}
    <div class="video-container">
        <video loop autoplay muted>
            <source src="assets/videos/demoZ.mp4" type="video/mp4"  >
        </video>
        <div class="overlay">
            <h1 class="display-4 fw-bold">Bienvenue à Arcadia Zoo </h1>
            <p class="lead">Découvrez nos animaux et leurs habitats fascinants.</p>
            <a href="#" class="btn btn-warning btn-lg">Explorer</a>
        </div>
    </div>

    <section class="container mt-5">
        <h2 class="text-center mb-4">Nos animaux en vedette</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card shadow">
                    <img src="assets/images/barbarie.jpg" class="card-img-top" alt="Lion">
                    <div class="card-body">
                        <h5 class="card-title">Simba</h5>
                        <p class="card-text">Le roi de la savane africaine.</p>
                        <a href="#" class="btn btn-success">En savoir plus</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow">
                    <img src="assets/images/elephant.jpg" class="card-img-top" alt="Éléphant">
                    <div class="card-body">
                        <h5 class="card-title">Dumbo</h5>
                        <p class="card-text">Un géant doux et puissant.</p>
                        <a href="#" class="btn btn-success">En savoir plus</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow">
                    <img src="assets/images/guepard.jpg" class="card-img-top" alt="Guépard">
                    <div class="card-body">
                        <h5 class="card-title">Flash</h5>
                        <p class="card-text">L'animal terrestre le plus rapide.</p>
                        <a href="#" class="btn btn-success">En savoir plus</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
