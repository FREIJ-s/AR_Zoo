{% extends 'base.html.twig' %}

{% block title %}Détails de l'Habitat{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center text-info">Détails de l'Habitat 🏝️</h1>

    <div class="card p-4 shadow-lg">
        <table class="table">
            <tbody>
                <tr>
                    <th scope="row">ID</th>
                    <td>{{ habitat.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Nom</th>
                    <td>{{ habitat.name }}</td>
                </tr>
                <tr>
                    <th scope="row">Description</th>
                    <td>{{ habitat.description }}</td>
                </tr>
                <tr>
                    <th scope="row">Date de Création</th>
                    <td>{{ habitat.creationDate ? habitat.creationDate|date('Y-m-d H:i:s') : 'Non spécifiée' }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-between mt-3">
        <a href="{{ path('app_habitat_index') }}" class="btn btn-outline-secondary">Retour à la liste</a>
        <a href="{{ path('app_habitat_edit', {'id': habitat.id}) }}" class="btn btn-warning">Modifier</a>
        {{ include('habitat/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
