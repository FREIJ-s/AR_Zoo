{% extends 'base.html.twig' %}

{% block title %}Liste des Soins des Animaux{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center text-primary">Suivi des Animaux 🦓🐅🐘</h1>

    <table class="table table-striped table-hover mt-4">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>État</th>
                <th>Nourriture</th>
                <th>Poids</th>
                <th>Date de passage</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for info_animal in info_animals %}
            <tr>
                <td>{{ info_animal.id }}</td>
                <td>{{ info_animal.status }}</td>
                <td>{{ info_animal.food }}</td>
                <td>{{ info_animal.weight }} kg</td>
                <td>{{ info_animal.datePassage ? info_animal.datePassage|date('Y-m-d') : 'Non spécifiée' }}</td>
                <td>
                    <a href="{{ path('app_info_animal_show', {'id': info_animal.id}) }}" class="btn btn-info btn-sm">Voir</a>
                    <a href="{{ path('app_info_animal_edit', {'id': info_animal.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="text-center">Aucun enregistrement trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_info_animal_new') }}" class="btn btn-success">Ajouter un enregistrement</a>
</div>
{% endblock %}
