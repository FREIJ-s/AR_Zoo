{% extends 'base.html.twig' %}

{% block title %}Liste des Habitats{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center text-primary">Habitats du Zoo 🏞️</h1>

    <table class="table table-striped table-hover mt-4">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Date de Création</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for habitat in habitats %}
            <tr>
                <td>{{ habitat.id }}</td>
                <td>{{ habitat.name }}</td>
                <td>{{ habitat.description }}</td>
                <td>{{ habitat.creationDate ? habitat.creationDate|date('Y-m-d H:i:s') : 'Non spécifiée' }}</td>
                <td>
                    <a href="{{ path('app_habitat_show', {'id': habitat.id}) }}" class="btn btn-info btn-sm">Voir</a>
                    <a href="{{ path('app_habitat_edit', {'id': habitat.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Aucun habitat trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_habitat_new') }}" class="btn btn-success">Ajouter un nouvel habitat</a>
</div>
{% endblock %}
