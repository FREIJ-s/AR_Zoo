{% extends 'base.html.twig' %}

{% block title %}Signaler un Animal{% endblock %}

{% block body %}
<section class="container mt-5 section-hidden">
    <h2 class="text-center mb-4">Vous avez trouv√© un animal sauvage ?</h2>

    {{ form_start(form, { 'attr': {'class': 'p-4 shadow-lg rounded bg-white'} }) }}

        <div class="mb-3">
            {{ form_label(form.lieu, 'Lieu', { 'label_attr': {'class': 'form-label'} }) }}
            {{ form_widget(form.lieu, { 'attr': {'class': 'form-control', 'placeholder': 'Ex: Rue des Lions, Paris', 'required': 'required'} }) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.description, 'Description', { 'label_attr': {'class': 'form-label'} }) }}
            {{ form_widget(form.description, { 'attr': {'class': 'form-control', 'rows': 3, 'required': 'required'} }) }}
        </div>

        <button type="submit" class="btn btn-danger w-100">Signaler</button>

    {{ form_end(form) }}
</section>
{% endblock %}
