{% extends 'base.html.twig' %}

{% block title %}Avis des Visiteurs
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h2 class="text-center mb-4">Avis des visiteurs sur Arcadia Zoo</h2>

		<div class="text-center mb-4">
			<a href="{{ path('app_home') }}" class="btn btn-outline-primary">
				<i class="fas fa-home"></i>
				Retour à l'accueil
			</a>
		</div>

		<div class="list-group">
			{% for avis in avisList %}
				<div class="list-group-item shadow-sm p-4 rounded mb-3 bg-white">
					<div class="d-flex justify-content-between align-items-center">
						<h5 class="fw-bold mb-0">{{ avis.pseudo }}</h5>
						{% if avis.date is defined %}
							<small class="text-muted">{{ avis.date }}</small>
						{% endif %}
					</div>

					<p class="mt-2">{{ avis.commentaire }}</p>
				</div>
			{% else %}
				<p class="text-center text-muted">Aucun avis pour le moment. Soyez le premier à donner votre avis !</p>
			{% endfor %}
		</div>

		<div class="text-center mt-4">
			<a href="{{ path('app_ajouter_avis') }}" class="btn btn-success">
				<i class="fas fa-comment-dots"></i>
				Ajouter un avis
			</a>
		</div>
	</div>

{% endblock %}
