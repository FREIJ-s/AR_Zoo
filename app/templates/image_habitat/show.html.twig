{% extends 'base.html.twig' %}

{% block title %}Détails de l'Image d'Habitat{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center text-info">Détails de l'Image 🏞️</h1>

    <div class="card p-4 shadow-lg">
        <img src="{{ image_habitat.url }}" class="img-fluid rounded mb-3" alt="{{ image_habitat.label }}">
        <table class="table">
            <tbody>
                <tr>
                    <th scope="row">ID</th>
                    <td>{{ image_habitat.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Nom</th>
                    <td>{{ image_habitat.label }}</td>
                </tr>
                <tr>
                    <th scope="row">URL</th>
                    <td>{{ image_habitat.url }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-between mt-3">
        <a href="{{ path('app_image_habitat_index') }}" class="btn btn-outline-secondary">Retour à la liste</a>
        {% if is_granted('ROLE_USER' )%}
        <a href="{{ path('app_image_habitat_edit', {'id': image_habitat.id}) }}" class="btn btn-warning">Modifier</a>
        {% endif %}
        {{ include('image_habitat/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
